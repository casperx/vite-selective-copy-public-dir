{
  "compilerOptions": {
    "noEmit": true,

    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "verbatimModuleSyntax": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "allowJs": true,
    "checkJs": true,

    "types": [
      "node"
    ],

    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src"
  ]
}
